definitions:
      Payment:
        type: object
          properties:
            id:
              type: integer
              description: id auto-generated by database
              example: 1
            nickname:
              type: string
              description: user-made nickname for payment method
              example: my credit
            user_id:
              type: integer
              description: foreign key id for user
              example: 1
            is_default:
              type: boolean
              description: the default payment method for orders
              default: false
            is_removed:
              type: boolean
              description: soft delete to preserve payments with pending transactions
              default: false
            charge_history:
              type: float
              description: History of amounts charged to this payment method
              default: 0.0
            details:
              type: object
              description: Payment details (card_number, card_type, user_name, etc)
              $ref: '#/definitions/Detail'
      Detail:
        type: object
          properties:
            id:
              type: integer
              description: id auto-generated by database
              example: 1
            user_name:
              type: string
              description: user name associated with payment method
              example: Jimmy Jones
            expires:
              type: string
              description: credit/debit card expiration date (mm/yyyy)
              example: 02/2020
            card_number:
              type: string
              description: 16-digit credit/debit card number
              example: 1
            card_type:
              type: integer
              description: type of credit/debit card (Visa, Mastercard, etc.)
              example: Visa
            user_email:
              type: integer
              description: e-mail of user assocaited with paypal account
              example: jimmy@gmail.com
            is_linked:
              type: boolean
              description: status of link between payment service and paypal
              default: True